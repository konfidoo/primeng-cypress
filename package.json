{
  "name": "@konfidoo/primeng-cypress",
  "author": "Konfidoo (https://konfidoo.de)",
  "description": "Provides Cypress test helpers for PrimeNG components ",
  "homepage": "https://github.com/konfidoo/primeng-cypress",
  "version": "0.1.0",
  "keywords": [
    "primeng",
    "cypress",
    "testing",
    "angular"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "npx cypress run --component --headless --spec \"cypress/**/*.cy.ts\"",
    "build:lib": "tsc -p tsconfig.lib.json && cp src/commands/cypress.d.ts lib/cypress.d.ts && (echo '/// <reference path=\"./cypress.d.ts\" />' && cat lib/index.d.ts) > lib/index.d.ts.tmp && mv lib/index.d.ts.tmp lib/index.d.ts",
    "prepare": "npm run build:lib"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "packageManager": "npm@10.9.2",
  "dependencies": {
    "@angular/compiler": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "primeng": "^21.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.0.3",
    "@angular/build": "^21.0.3",
    "@angular/cli": "^21.0.3",
    "@angular/common": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "@angular/core": "^21.0.4",
    "@angular/platform-browser-dynamic": "^21.0.4",
    "@types/cypress": "^0.1.6",
    "@types/mocha": "^10.0.10",
    "cypress": "^15.7.1",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8",
    "zone.js": "^0.16.0"
  }
}
